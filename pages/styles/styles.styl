/**
 * This file contains support styles for demo pages
 */

html, body, h1, h2, h3
  margin 0
  padding 0
  font-family Roboto, sans-serif

body
  padding-bottom 50px

h1, h2, h3, h4
  font-weight 300
  margin-top 35px

.header
  text-align center
  margin 25px 0
  font-size 40px


$row-colors = #eceff1
$col-colors = #ffab91 #bbdefb #f0f4c3 #b39ddb #b2ebf2 #ffe0b2 #b2dfdb

.demo
  padding-top 24px
  position relative
  > .col > .row
    margin-top 5px

  .row
    for $color, $index in $row-colors
      &.color-{$index}
        background $color
        border 2px solid darken($color, 25%)

    &.layout-example
      > div
        background none
        border 0
      .row.demo
        margin-top 0

    > div
      background #90caf9
      text-align center
      box-sizing border-box
      border 2px solid #1976d2
      min-height 40px
      line-height 1.4
      padding 7px 0

      for $color, $index in $col-colors
        &.color-{$index}
          background $color
          border 2px solid darken($color, 25%)

    &.v-aligns
      height 165px

  .code-popup
    position absolute
    top 0
    left 0
    right 0
    .show-code
      display inline-block
      float right
      cursor pointer
      margin-right -17px
      padding: 5px 16px 5px 16px
      transition color .2s, background .2s
      &:hover
        color #ff7043

    > pre
      display block
      opacity 0
      margin 29px -17px 0 -15px
      padding 7px 0 7px 60px
      background #f0f0f0
      transition opacity .2s
      z-index -1

    &.shown
      z-index 1
      > pre
        opacity 1
        z-index 1
        box-shadow -4px 5px 9px -2px rgba(130,128,130,1)
      .show-code
        background #f0f0f0
        color #ff7043

  &.col3-example
    > .col > .row
      .col
        padding 0

.sm-padding
  padding 5px
